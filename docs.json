{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Rulebook Company",
  "colors": {
    "primary": "#14B8A6",
    "light": "#5EEAD4",
    "dark": "#0F766E"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "index",
              "overview",
              "quickstart",
              "api-key",
              "playground"
            ]
          },
          {
            "group": "User Guides",
            "pages": ["guides/overview"]
          },
          {
            "group": "Concepts",
            "pages": ["concepts/overview"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@rulebook.company"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Explore More",
      "href": "https://rulebookcompany.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "topAnchor": {
    "enabled": false
  },
  "modeToggle": {
    "default": "wide",
    "isHidden": true
  },
  "layout": {
    "default": "topnav"
  },
  "footer": {
    "socials": {
      "x": "https://x.com/rulebookco",
      "github": "https://github.com/rulebook-company",
      "linkedin": "https://linkedin.com/company/rulebook-company"
    }
  },
  "customCSS": ["custom.css"]
}
